<h2>Party # <%= link_to( @party.id, party_path(@party.id) )%></h2>
<!-- <h3>Paid?: <%=@party.has_paid%></h3> -->

<table align="center">
  <thead>
    <th>
      Item
    </th>
    <th>
      Cost
    </th>
    <th>
      Remove Item
    </th>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <h4><%= order.food.name %></h4>
        </td>
        <td>
          <h4><%= order.food.cost %> $</h4>
        </td>
        <td class="remove-item">
          <%= link_to "Remove", order_path(order.id, :party => @party.id), method: :delete, class: "hi" %>

        </td>
      </tr>
    <% end %>
    <h5>$<%= @total %></h5>
  </thead>
</table>

<h3><%= link_to "Add item", "#{new_order_path}?party_id=#{@party.id}" , class: "black-button" %></h3>

<%= link_to "Edit Party", edit_party_path(@party), class: "hi" %>
