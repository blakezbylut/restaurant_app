<h1>Server Login</h1>

  <div class="row">
    <div class="ten columns offset-by-one">
      <%= form_tag '/sessions', method: :post do %>

        <%= label_tag :username %>
        <%= text_field_tag :username %>

        <%= label_tag :password %>
        <%= password_field_tag :password %>

        <%= submit_tag "Log In" %>

    </div>
  </div>
<% end %>
